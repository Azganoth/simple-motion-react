{
  "name": "@simple-motion/react",
  "version": "0.0.1",
  "description": "A lightweight React transition library for animating component lifecycle changes.",
  "keywords": [
    "react",
    "transition",
    "motion"
  ],
  "license": "MIT",
  "author": "Ademir José Ferreira Júnior <ademirj.ferreirajunior@gmail.com> (https://github.com/Azganoth)",
  "type": "module",
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean --out-dir lib",
    "check-types": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint",
    "storybook": "storybook dev -p 6006",
    "storybook-docs": "storybook dev --docs",
    "storybook-docs:build": "storybook build --docs",
    "storybook:build": "storybook build",
    "test": "jest",
    "test:coverage": "jest --collect-coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@storybook/addon-docs": "^9.0.12",
    "@storybook/react-vite": "^9.0.12",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.23",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "9.0.12",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "jest-watch-typeahead": "^3.0.1",
    "prettier": "^3.6.2",
    "storybook": "^9.0.12",
    "ts-jest": "^29.4.0",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  },
  "peerDependencies": {
    "react": "^18"
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=22"
  }
}
